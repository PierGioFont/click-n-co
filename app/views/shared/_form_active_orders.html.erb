<div class="order-">

  <div class="order-list">
    <div class="order-informations header">

    <p class="order-retailer text-center"><strong>N°</strong></p>
    <p class="order-retailer text-center"><strong>Shop</strong></p>
    <p class="order-retailer text-center"><strong>Date de retrait</strong></p>
    <p class="order-retailer text-center"><strong>Prix</strong></p>
    <p class="order-retailer text-center"><strong>Produits</strong></p>
    </div>
  </div>

  <div class="order-list">
    <% order.each do |order| %>
    <div class="order-informations">
      <p class="order-retailer"><%= order.id %></p>
      <p class="order-retailer">
        <%= order.shop.name.capitalize %><br><%= order.shop.address %>
      </p>
      <p class="order-retailer"><%= order.pick_up_at.strftime('%A %d %b - %H%M') %>h</p>
      <p class="order-retailer"><%= order.total_price %>€</p>
      <p class="order-retailer">
        <% order.ordered_products.each do |ordprods| %>
          <%= ordprods.product.name %> x <%= ordprods.quantity %>
        <% end %>
      </p>
    </div>
    <% end %>
  </div>
</div>
