<div class="shop-order">
  <%= simple_form_for Order.new() do |f| %>

    <%= simple_fields_for :other do |o| %>
      <div class="row">
        <div class="col-sm-7">
          <%= o.input :day, collection: [
            @today.strftime("%d-%b-%y"),
            @today.next.strftime("%d-%b-%y"),
            @today.next_day(2).strftime("%d-%b-%y")],
            label: false, selected: 0 %>
        </div>

        <div class="col-sm-5">
          <%= o.input :hour, collection: ["12h - 12h30", "15h - 15h30", "16h - 16h30"],
            label: false, selected: 0  %>
        </div>
      </div>
    <% end %>

    <div class="comment-order">
    <%= link_to "Ajouter un commentaire Ã  ma commande", '#', :id => 'comment', "data-toggle" => "modal", 'data-target' => '#CommentOrder' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Commander', class: "btn btn-success btn-lg btn-block" %>
    </div>
  <% end %>
</div>



